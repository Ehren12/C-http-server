{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C Debug (GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/server.o",  // Replace with your executable name
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "c-build",
            "logging": {
                "moduleLoad": false,
                "trace": true
            },
            "stopOnError": true
        }
    ]
}
